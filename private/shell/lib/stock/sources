CCSHELL_DIR     = $(BASEDIR)\private\shell

!include $(CCSHELL_DIR)\lib\lib.inc

NO_BROWSER_FILE = 1

SOURCES_USED    = $(SOURCES_USED) $(CCSHELL_DIR)\lib\lib.inc

TARGETNAME      = stocklib
TARGETPATH      = obj
TARGETTYPE      = LIBRARY

!ifdef UNIX
SOURCES_PLATFORM = ..\shguidp.c
!else
DIR_GENERATED    = ..
SOURCES_PLATFORM = 
!endif

GENERATED_SOURCES =  \
                  $(DIR_GENERATED)\dkaa.cpp    \
                  $(DIR_GENERATED)\dkaw.cpp    \
                  $(DIR_GENERATED)\shstra.cpp  \
                  $(DIR_GENERATED)\shstrw.cpp  \
                  $(DIR_GENERATED)\nativea.cpp \
                  $(DIR_GENERATED)\nativew.cpp \

SOURCES         = ..\debug.c     \
                  ..\mmhelper.cpp\
                  ..\runtask.cpp \
                  ..\caggunk.cpp \
                  ..\util.cpp    \
                  ..\isos.cpp    \
                  ..\crst.cpp    \
                  ..\security.cpp \
                  ..\dllver.cpp  \
                  ..\valid.c     \
                  ..\shco.c      \
                  $(GENERATED_SOURCES) \
                  $(SOURCES_PLATFORM)

#PRECOMPILED_CXX   = 1
PRECOMPILED_INCLUDE = ..\proj.h

#
# do guids with guidlib.exe
#
NTTARGETFILE0   = $(CCSHELL_DIR)\lib\$(O)\shguid.lib \
                  $(CCSHELL_DIR)\lib\$(O)\shguidp.lib

# 
# all shell components expect the stocklib to be in shell\lib\$O,
# so we'll copy it there
#
NTTARGETFILES   = $(CCSHELL_DIR)\lib\$(O)\stocklib.lib
