        [in] HWND hWnd,
        [in] STGMEDIUM *pstgMedium,
        [in] LPWSTR pwszItemDescription,
        [in] DWORD dwFlags,
        [in] DWORD dwReserved,
        [in, out] LPVIRUSINFO pVirusInfo);

    HRESULT DisplayCustomInfo( void );
}

[
    uuid(E88E5DE0-BD3E-11CF-AAFA-00AA00B6015C)  // CLSID_VirusScan - the standard implementation
