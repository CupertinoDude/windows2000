                    WS_GROUP, 10, 16, 39, 10
    CONTROL         "&Full Screen", ID_VGA240, "Button", BS_AUTORADIOBUTTON,
                    10, 29, 55, 10
#else
    CONTROL         ID_ICON, -1, "static", SS_ICON, 16, 10, 0, 0
#endif
