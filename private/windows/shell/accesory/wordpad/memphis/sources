MAJORCOMP=shell
MINORCOMP=accesory

TARGETNAME=wordpad
TARGETPATH=obj
TARGETTYPE=PROGRAM

UMTYPE=windows

USE_NATIVE_EH=1

USE_MFC=1
CHICAGO_PRODUCT=1

PRECOMPILED_INCLUDE=stdafx.h
PRECOMPILED_CXX=1

#
# Turn of native MFC richedit support because we can't use any of it and if
# we turn it off we'll catch any attempt to use it.  This can be removed when
# MFC gets native richedit2 support.
#

C_DEFINES=  \
            $(C_DEFINES)                \
            -D_AFX_NO_RICHEDIT_SUPPORT

INCLUDES=   \
            ..\include

#
# Note, the files from dlgcomm.cpp to winctrl4.cpp are snapshotted from the
# MFC 4.2 source to provide richedit2 capability.  When MFC gets native support
# for richedit2 the can be removed.
#

SOURCES=\
    dlgcomm.cpp     \
    dlgfnt.cpp      \
    oleinit.cpp     \
    viewrich.cpp    \
    winctrl2.cpp    \
    winctrl4.cpp    \
    wordpad.rc   \
	buttondi.cpp \
	chicdial.cpp \
	cntritem.cpp \
	colorlis.cpp \
	datedial.cpp \
	ddxm.cpp     \
	docopt.cpp   \
	doctype.cpp  \
	filenewd.cpp \
	formatba.cpp \
	formatpa.cpp \
	formatta.cpp \
	ipframe.cpp  \
	key.cpp      \
	listdlg.cpp  \
	mainfrm.cpp  \
	multconv.cpp \
	options.cpp  \
	optionsh.cpp \
	pageset.cpp  \
	ruler.cpp    \
	srvritem.cpp \
	strings.cpp  \
	unitspag.cpp \
	wordpad.cpp  \
	wordpdoc.cpp \
	wordpvw.cpp  \
    fixhelp.cpp  


TARGETLIBS= \
    $(BASEDIR)\public\sdk\lib\*\comdlg32.lib \
    $(BASEDIR)\public\sdk\lib\*\shell32.lib  \
    $(BASEDIR)\public\sdk\lib\*\uuid.lib     \
    $(BASEDIR)\public\sdk\lib\*\ole32.lib    \
    $(BASEDIR)\public\sdk\lib\*\oledlg.lib   \
    $(BASEDIR)\public\sdk\lib\*\oleaut32.lib
