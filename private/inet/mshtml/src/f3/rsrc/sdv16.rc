CAPTION "Internet Explorer"
#ifdef WIN16
FONT 8, "MS Sans Serif"
#else
FONT 8, "MS Shell Dlg"
#endif
BEGIN
    ICON            IDI_EXCLAMATION,IDC_UNKNOWNFILE_ICON,7,8,18,20
    LTEXT           "Internet Explorer is opening file of unknown type:\n%s"
	    IDC_UNKNOWNFILE_EXPL,38,8,197,20,SS_NOPREFIX

