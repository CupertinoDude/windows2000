ROOT=$(MAKEDIR:\debug\src=)
!include $(ROOT)\common.inc

CHECKED_ALT_DIR=1

!if "$(BUILD_XMLDBG_AS_LIB)" == "1"
TARGETNAME=xmldbg
TARGETPATH=$(ROOT)\debug\$(_OBJ_DIR)
TARGETTYPE=LIBRARY
!else
TARGETPATH=obj
TARGETPATHLIB=obj
TARGETNAME=msxmldbg
TARGETTYPE=DYNLINK
!endif

!if "$(TARGETTYPE)" == "DYNLINK"
DLLDEF=$(O)\f3debug.def
DLLENTRY=_DllMainCRTStartup
DLLBASE=0x65000000
BUILD_DBG_AS_LIB=0
!else
BUILD_DBG_AS_LIB=1
!endif

!undef USE_NOLIBS
!undef USE_NTDLL

USE_LIBCMT=1

INCLUDES=$(SDK_INC_PATH);\
    ..\include;

