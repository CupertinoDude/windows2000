MAJORCOMP=msxml
MINORCOMP=core

ROOT=$(MAKEDIR:\core\lang=)
!include $(ROOT)\common.inc

TARGETNAME=lang	
TARGETPATH=obj
TARGETTYPE=LIBRARY

SOURCES= \
    character.cxx \
    class.cxx \
    exception.cxx \
    integer.cxx \
    object.cxx \
    string.cxx \
    stringbuffer.cxx

